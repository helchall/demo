{% extends 'base_login.html.twig' %}

{% block title %}New password!{% endblock %}

{% block body %}
    <style>
        button:last-child {
            visibility: hidden;
        }
        div.top-block {
            padding-bottom: 0!important;
        }
        div.bottom-block {
            padding-top: 0!important;
        }
    </style>
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
                            <div class="col-lg-6">
                                <div class="top-block p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Reset Your Password</h1>
                                        <p class="mb-4">Please enter your new password below.</p>
                                    </div>

                                    <!-- Begin Register form -->
                                    {{ form_start(form, {'attr': {'class': 'user'}}) }}
                                    <div class="form-group row">
                                        <div class="col-sm-6 mb-3 mb-sm-0">
                                            {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Password'}}) }}
                                        </div>
                                        <div class="col-sm-6">
                                            {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control form-control-user', 'placeholder': 'Repeat Password'}}) }}
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-primary btn-user btn-block">
                                        Change password
                                    <button>
                                    {{ form_end(form) }}
                                </div>
                                <div class="bottom-block p-5 text-center">
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="{{ path('user_registration') }}">Create an Account!</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="{{ path('app_login') }}">
                                            Already have an account? Login!
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
